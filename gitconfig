[user]
	name = Bernard Roesler
	email = bernard.roesler@gmail.com
[color]
	ui = true
[alias]
	lol = log --oneline --graph --decorate 
	st = status -s --branch
    co = checkout
    br = branch
	aa = add -A :/
	conflicts = diff --name-only --diff-filter=U
	dt = difftool
    up = submodule foreach git pull origin master
[push]
	default = simple
[merge]
	# tool = vimdiff
    conflictstyle = diff3
	tool = fugitive
[core]
	excludesfile = ~/.gitignore_global
	editor = vim -X
	pager = less -F -X
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f
[mergetool "fugitive"]
	cmd = vim -f -c \"Gvdiff\" \"$MERGED\"
